<div class="jumbotron">
    <div class="container">
        <h1 class="display-4 text-center"><strong><i class="far fa-newspaper"></i> Informações por
                categorias!</strong></h1><br>

        <div class="row">
            {{#each categorias}}
            <center>
                <div class="card card-signin mt-4" style="width: 50rem;">
                    <div id="cardfinal" class="card-body">
                        <h3 class="card-title text-center text-uppercase"><strong><i
                                    class="fas fa-exclamation-circle"></i>
                                Aviso: {{nome}}</strong></h3>
                        <h5>Descrição: {{slug}}</h5>
                        <h5>Categoria: {{categoria.nome}}</h5>
                        <a href="/categorias/{{slug}}">
                            <button class="btn btn-primary">Mais informações <i
                                    class="far fa-question-circle"></i></button>
                        </a><br>
                    </div>
                </div>
            </center>
            {{else}}
            {{/each}}
        </div>
    </div>
</div>

<style>
    .card-signin {
        border: 0;
        border-radius: 1rem;
        box-shadow: 0 1rem 1rem 0 rgba(0, 0, 0, 0.1);
    }

    .card-signin .card-title {
        margin-bottom: 2rem;
        font-weight: 300;
        font-size: 1.5rem;
    }

    .card-signin .card-body {
        padding: 2rem;
    }
</style>