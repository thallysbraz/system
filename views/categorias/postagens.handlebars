<div>
    <div class="jumbotron ">
        <div>
            <h1>
                <center>{{categoria.nome}}</center>
            </h1>
        </div>
        {{#each postagens}}
        <div class="card mt-4">
            <div class="card-body">
                <h3>{{titulo}}</h3>
                <p>{{descricao}}</p><br>
                <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais!</button></a>
            </div>
        </div>
        {{else}}
        <h5>Nenhuma postagem.</h5>
        {{/each}}
    </div>
</div>