<div class="card">
    <div class="card-body">
        <h3>Crie sua conta: </h3>
        <form action="" method="post">
            <label for="nome"><i class="fas fa-pencil-alt"></i> Nome:</label>
            <input type="text" name="nome" class="form-control" placeholder="Nome" required>
            <label for="email"><i class="far fa-envelope"></i> Email:</label>
            <input type="email" name="email" class="form-control" placeholder="Email" required>
            <label for="email"><i class="fas fa-user-graduate"></i> Professor ou Aluno:</label>
            <select name="professor" placeholder="Professor ou Aluno" class="custom-select">
                <option value="false">Aluno</option>
                <option value="true">Professor</option>
            </select>
            <label for="senha"><i class="fas fa-key"></i> Senha:</label>
            <input type="password" name="senha" class="form-control" placeholder="Senha" required>
            <label for="senha2"><i class="fas fa-key"></i> Confirme sua senha:</label>
            <input type="password" name="senha2" class="form-control" placeholder="Confirme sua senha" required>
            <button type="submit" class="btn btn-primary btn-lg btn-block mt-4"><i class="fas fa-user-plus"></i> Criar
                conta</button><br>
        </form>
    </div>
</div>