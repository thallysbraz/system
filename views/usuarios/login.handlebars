<div class="card">
    <div class="card-body">
        <h4>Login:</h4>
        <form class="mt-4" action="/usuarios/login" method="POST">
            <label for="email">Email: </label>
            <input type="email" class="form-control" name="email" placeholder="Email" required>
            <label for="senha">Senha: </label>
            <input type="password" class="form-control" name="password" placeholder="Senha" required>
            <button class="btn btn-primary btn-lg btn-block mt-4" type="submit">Entrar</button>
            <br>
            <a href="/usuarios/forgot_password">Esqueceu a senha?</a><br>
        </form>
    </div>
</div>