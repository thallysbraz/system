{{#each erros}}
<div class="alert alert-danger">
</div>
{{else}}
{{/each}}

<div class="jumbotron">
    <h1 class="display-4 text-center"><strong>Historico</strong></h1><br>
    <table class="table table-striped table-bordered mt-3">
        <thead class="thead-dark">
            <tr>
                <th scope="col">
                    <center>
                        <h4>Nota</h4>
                    </center>
                </th>
                <th scope="col">
                    <center>
                        <h4>Disciplina</h4>
                    </center>
                </th>
                <th scope="col">
                    <center>
                        <h4>Semestre</h4>
                    </center>
                </th>
            </tr>
        </thead>
        <tbody>
            {{#each mencao}}
            <tr>
                <th scope="row">
                    <center>
                        <h4>{{this.nota}}</h4>
                    </center>
                </th>
                <td>
                    <center>
                        <h4>{{this.disciplina}}</h4>
                    </center>
                </td>
                <td>
                    <center>
                        <h4>{{this.semestre}}</h4>
                    </center>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>