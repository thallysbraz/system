{{#each erros}}
<div class="alert alert-danger">

</div>
{{else}}
{{/each}}

<div class="jumbotron">
    <table class="table table-striped table-bordered mt-3">
        <thead class="thead-dark">
            <tr>
                <th scope="col">
                    <h2>Nome</h2>
                </th>
                <th scope="col">
                    <h2>Email</h2>
                </th>
            </tr>
        </thead>
        <tbody>
            {{#each usuario}}
            <tr>
                <th scope="row">
                    <h5>{{this.nome}}</h5>
                </th>
                <td>
                    <h5>{{this.email}}</h5>
                </td>
            </tr>
            {{else}}
            {{/each}}
        </tbody>
    </table>

</div>