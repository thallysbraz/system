{{#each erros}}
<div class="alert alert-danger">
</div>
{{else}}
{{/each}}

<div class="jumbotron">
    <h1 class="display-4 text-center"><i class="fas fa-list-ol"></i> <strong>Hist√≥rico</strong></h1><br>
    <table class="table table-striped table-bordered mt-3">
        <thead class="thead-dark">
            <tr>
                <th scope="col">
                    <center>
                        <h4>Disciplina</h4>
                    </center>
                </th>
                <th scope="col">
                    <center>
                        <h4>Nota</h4>
                    </center>
                </th>
                <th scope="col">
                    <center>
                        <h4>Semestre</h4>
                    </center>
                </th>
                <th scope="col">
                    <center>
                        <h4>Status</h4>
                    </center>
                </th>
            </tr>
        </thead>
        <tbody>
            {{#each mencao}}
            <tr>
                <th scope="row">
                    <center>
                        <h4>{{this.disciplina}}</h4>
                    </center>
                </th>
                <td>
                    <center>
                        {{#if this.status}}
                        <h4 id="aprovado">{{this.nota}}</h4>
                        <style>
                            #aprovado {
                                color: green;
                            }
                        </style>
                        {{else}}
                        <h4 id="reprovado">{{this.nota}}</h4>
                        <style>
                            #reprovado {
                                color: red;
                            }
                        </style>
                        {{/if}}
                    </center>
                </td>
                <td>
                    <center>
                        <h4>{{this.semestre}}</h4>
                    </center>
                </td>
                <td>
                    <center>
                        {{#if this.status}}
                        <h4 id="icon1"><i class="far fa-check-circle"></i></h4>
                        <style>
                            #icon1 {
                                color: green;
                            }
                        </style>
                        {{else}}
                        <h4 id="icon2"><i class="fas fa-times"></i></h4>
                        <style>
                            #icon2 {
                                color: red;
                            }
                        </style>
                        {{/if}}
                    </center>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>