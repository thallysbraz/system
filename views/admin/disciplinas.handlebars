<div class="jumbotron">
    <h2>Lista de disciplinas:</h2>
    <hr>
    <a href="/admin/disciplinas/add"><button class="btn btn-secondary">Nova disciplina</button></a>

    <div class="card mt-4">
        <div class="card-body">
            <table class="table table-striped table-bordered mt-3">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">
                            <h2>Nome</h2>
                        </th>
                        <th scope="col">
                            <h2>Ementa</h2>
                        </th>
                        <th scope="col">
                            <h2>CÃ³digo</h2>
                        </th>
                        <th scope="col">
                            <h2>Notas</h2>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each disciplinas}}
                    <tr>
                        <th scope="row">
                            <h5>{{nome}}</h5>
                        </th>
                        <td>
                            <h5>{{ementa}}</h5>
                        </td>
                        <td>
                            <h5>{{codigo}}</h5>
                        </td>
                        <td>
                            <a href="/admin/disciplinas/edit/{{_id}}">
                                <button class="btn btn-secondary">
                                    <i class="far fa-edit"></i>
                                    Notas
                                </button>
                            </a>
                        </td>
                    </tr>
                    {{else}}
                    <h4 class="mt-3">
                        <font COLOR="red">Nenhuma disciplina encontrada!</font>
                    </h4>

                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>