<div class="jumbotron">
    <div class="container">
        <h1 class="display-4 text-center"><strong>Cursos disponiveis</strong></h1><br><br>
        <center>
            <table class="table table-striped table-bordered mt-3">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">
                            <h2>Nome</h2>
                        </th>
                        <th scope="col">
                            <h2>Codigo</h2>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each cursos}}
                    <tr>
                        <th scope="row">
                            <h4>{{nome}}</h4>
                        </th>
                        <td>
                            <h4>{{codigo}}</h4>
                        </td>
                    </tr>
                    {{else}}
                    {{/each}}
                </tbody>
            </table>
        </center>
    </div>
</div>