<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3><strong>Nova disciplina:</strong></h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/disciplinas/nova" method="POST">
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" placeholder="Nome da disciplina" class="form-control">
            <label for="codigo">Codigo:</label>
            <input type="text" id="codigo" name="codigo" placeholder="Codigo da disciplina" class="form-control">
            <label for="professor">Professor:</label>
            <input type="text" id="professor" name="professor" placeholder="Matricula do Professor"
                class="form-control">
            <label for="ementa">Ementa vigente:</label>
            <textarea name="ementa" placeholder="Ementa da disciplina" class="form-control" required></textarea><br>
            <button type="submit" class="btn btn-success">Criar disciplina</button>
        </form>
    </div>
</div>