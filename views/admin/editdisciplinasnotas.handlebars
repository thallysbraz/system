{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="jumbotron">
    <center>
        <h2>Lançamento de notas:</h2>
    </center>
    <table class="table table-striped table-bordered mt-3">
        <thead class="thead-dark">
            <tr>
                <th scope="col">NOME</th>
                <th scope="col">MATRICULA</th>
                <th scope="col">MENÇÃO</th>
                <th scope="col">STATUS</th>
            </tr>
        </thead>
        <tbody>
            {{#each usuarios}}
            <tr>
                <th scope="row">{{nome}}</th>
                <td>{{_id}}</td>
                <td>
                    <select name="nota" class="custom-select">
                        <option value="SR">SR - SEM RENDIMENTO (Zero)</option>
                        <option value="II">II - INFERIOR (0,1 a 2,9)</option>
                        <option value="MI">MI - MÉDIO INFERIOR (3,0 a 4,9)</option>
                        <option value="MM">MM - MÉDIO (5,0 a 6,9)</option>
                        <option value="MS">MS - MÉDIO SUPERIOR (7,0 a 8,9)</option>
                        <option value="SS">SS - SUPERIOR (9,0 a 10,0)</option>
                    </select>
                </td>
                <td><button class="btn btn-success"><i class="far fa-check-circle"> Salvar</button></i></td>
            </tr>
            {{else}}
            {{/each}}
        </tbody>
    </table>
</div>