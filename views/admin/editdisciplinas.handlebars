{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Editar Disciplina:</h4>
        <form action="/admin/disciplinas/edit" method="POST">
            <input type="hidden" value="{{disciplina._id}}" name="id">
            <label for="titulo">Titulo: </label>
            <input type="text" name="titulo" class="form-control" value="{{postagem.titulo}}" required>
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control" value="{{postagem.slug}}" required>
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" value="{{postagem.descricao}}" required>
            <label for="conteudo">Conteudo: </label>
            <textarea name="conteudo" class="form-control" required>{{postagem.conteudo}}</textarea>
            <label for="disciplina">Aluno: </label>
            <select name="disciplina" class="custom-select">
                {{#each usuarios}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma usuarios registrada</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-2" type="submit">Editar Disciplina</button>
        </form>
    </div>
</div>