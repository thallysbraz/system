<div class="jumbotron">
    <h2>Lista de categorias:</h2>
    <hr>
    <a href="/admin/categorias/add"><button class="btn btn-success"><i class="far fa-newspaper"></i> Nova
            categoria</button></a>

    {{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Data de criação: {{date}}</small><br>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-4"><i class="far fa-edit"></i>
                    Editar categoria</button></a>
            <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2"><i class="fas fa-trash-alt"></i> Deletar
                    categoria</button>
            </form>
        </div>

    </div>
    {{else}}

    <h4 class="mt-3">
        <font COLOR="red">Nenhuma categoria registrada!</font>
    </h4>

    {{/each}}
</div>