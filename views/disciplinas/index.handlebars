<div class="jumbotron">
    <div class="container">
        <h1 class="display-4 text-center"><strong>Lista de disciplinas ofertadas</strong></h1><br><br>

        <center>
            <table class="table table-striped table-bordered mt-3">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">
                            <h2><i class="fas fa-sort-amount-down"></i> Codigo</h2>
                        </th>
                        <th scope="col">
                            <h2>Nome</h2>
                        </th>
                        <th scope="col">
                            <h2>Ementa</h2>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each disciplinas}}
                    <tr>
                        <th scope="row">
                            <h4>{{codigo}}</h4>
                        </th>
                        <td>
                            <h4>{{nome}}</h4>
                        </td>
                        <td>
                            <h4>{{ementa}}</h4>
                        </td>
                    </tr>
                    {{else}}
                    {{/each}}
                </tbody>
            </table>
        </center>
    </div>
</div>