<div class="jumbotron">
    <center>
        <h2>Lan√ßamento de notas</h2>
    </center>

    <table class="table table-striped table-bordered mt-3">
        <thead class="thead-dark">
            <tr>
                <th scope="col">
                    <center>
                        <h4>Alunos</h4>
                    </center>
                </th>
            </tr>
        </thead>
        <tbody>

            {{#each usuario}}
            <tr>
                <td>
                    <form action="/professor/notas/matricula/{{_id}}" method="POST">
                        <label for="id">{{nome}} <strong>{{_id}}</strong></label>
                        <input type="hidden" name="id" value="{{_id}}">
                        <input type="text" id="nota" name="nota" placeholder="Nota" class="form-control">
                        <input type="hidden" name="disci" value="{{notas}}">
                        <label for="nota">Semestre vigente:</label>
                        <select name="semestre" class="custom-select">
                            <option value="2/2019">2/2019</option>
                            <option value="1/2020">1/2020</option>
                            <option value="2/2020">2/2020</option>
                            <option value="1/2021">1/2021</option>
                            <option value="2/2021">2/2021</option>
                        </select><br><br>
                        <button class="btn btn-success" type="submit">
                            <i class="far fa-check-circle"> Salvar</i>
                        </button>
                    </form>
                </td>
            </tr>
            {{else}}
            {{/each}}
        </tbody>
    </table>
</div>