<div class="jumbotron">
    <center>
        <h2><i class="fas fa-edit"></i> Lan√ßamento de notas: {{nomeDisc}}</h2>
    </center>
    <table class="table table-striped table-bordered mt-3">
        <thead class="thead-dark">
            <tr>
                <th scope="col">
                    <center>
                        <h4>Alunos</h4>
                    </center>
                </th>
            </tr>
        </thead>
        <tbody>
            {{#each usuario}}
            <tr>
                <td>
                    <form action="/professor/notas/matricula/{{_id}}" method="POST">

                        <label for="nome" class="form-control"><strong> {{this.nome}}</strong></label><br>
                        <label for="matricula" class="form-control"><strong>{{id}}</strong></label><br>
                        <input type="hidden" name="matricula" value="{{id}}">
                        {{#if ../edit}}
                        <label for="nome" class="form-control">{{../notaExibida}}</label><br>
                        {{else}}
                        <input type="text" class="form-control" name="nota" placeholder="Nota" required><br>
                        {{/if}}
                        <label for="semestre" class="form-control">{{../semestreTeste}}</label><br>
                        <input type="hidden" class="form-control" name="semestre" value="{{../semestreTeste}}"
                            placeholder="Semestre" required>
                        {{#each ../discID}}
                        <input type="hidden" name="disciplina" value="{{text}}">
                        {{/each}}
                        <button class="btn btn-success mt-2" type="submit">
                            <i class="far fa-check-circle"> Salvar</i>
                        </button>
                    </form>
                </td>
            </tr>
            {{else}}
            <h2>Nenhum aluno encontrado</h2>
            {{/each}}
        </tbody>
    </table>
</div>
<style>
    .btn {
        font-size: 80%;
        border-radius: 10rem;
        letter-spacing: .1rem;
        font-weight: bold;
        padding: 1rem;
        transition: all 0.2s;
    }
</style>