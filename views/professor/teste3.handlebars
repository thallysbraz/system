<div class="jumbotron">
    <center>
        <h2>Lan√ßamento de notas</h2>
    </center>

    <table class="table table-striped table-bordered mt-3">
        <thead class="thead-dark">
            <tr>
                <th scope="col">
                    <center>
                        <h4>Alunos</h4>
                    </center>
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <center>
                        <h4>Codigo da disciplina: <strong>{{disciplina}}</strong></h4>
                    </center>
                </td>
            </tr>
            {{#each usuario}}
            <tr>
                <td>
                    <form action="/professor/notas/matricula/{{_id}}" method="POST">
                        <div class="form-group row">
                            <label for="inputPassword" class="col-sm-2 col-form-label">Nota</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" id="inputPassword" placeholder="Password">
                            </div>
                            <label for="inputPassword" class="col-sm-2 col-form-label">Semestre vigente:</label>
                            <div class="col-sm-10 mt-2">
                                <select name="semestre" class="custom-select">
                                    <option value="2/2019">2/2019</option>
                                    <option value="1/2020">1/2020</option>
                                    <option value="2/2020">2/2020</option>
                                    <option value="1/2021">1/2021</option>
                                    <option value="2/2021">2/2021</option>
                                </select>
                            </div>
                            <label for="inputPassword" class="col-sm-2 col-form-label">ID da disciplina:</label>
                            <div class="col-sm-10 mt-2">
                                <select name="semestre" class="custom-select">
                                    {{#each ../discID}}
                                    <option value="{{text}}">{{text}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="col-sm-2 col-form-label"></div>
                            <div class="col-sm-10 mt-2">
                                <button class="btn btn-success mt-2" type="submit">
                                    <i class="far fa-check-circle"> Salvar</i>
                                </button>
                            </div>
                        </div>
                    </form>
                </td>
            </tr>
            {{else}}
            <h2>Nenhum aluno encontrado</h2>
            {{/each}}
        </tbody>
    </table>
</div>