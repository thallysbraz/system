<div>
    <div class="jumbotron ">
        <div class="text-center">
            <h1 class="display-4"><strong>Bem-vindo!</strong></h1>
            <p class="lead"><strong>First Educação e Tecnologia</strong></p>
            <hr class="my-4">
        </div>

        <h2>Informações recentes: </h2>

        {{#each postagens}}

        <div class="card mt-4">
            <div class="card-body">
                <h3>Aviso: {{titulo}}</h3>
                <p>Descrição: {{descricao}}</p>
                <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais!</button></a>
                <hr>
                <small>Categoria: {{categoria.nome}}</small><br>
                <small>Data de publicação: {{data}}</small>
            </div>
        </div>
        {{else}}
        <h5 class="alert alert-danger">Nenhuma informação!</h5>
        {{/each}}
    </div>
</div>